<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Flights</title>
</head>
<body>
    <h2>Flight No: <%= flight.flightNo %></h2>
    <section><div>Airline</div><div><%= flight.airline %></div></section>
    <section><div>Departure Airport</div><div><%= flight.airport %></div></section>
    <section><div>Departs</div><div><%= flight.departs %></div></section>
    <% if (flight.destination.length) { %>
    <% flight.destination.forEach(function(d) { %>
    <section><div>Arrival Airport</div><div><%= d.airport %></div></section> 
    <section><div>Arrival</div><%= d.arrival %></section>
    <% })} %>
    <br>
    <br>
    <form action="/flights/<%= flight._id %>/destinations" method="POST">
    <label>Airport:
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DAL">DAL</option>
            <option value="LAX">LAX</option>
            <option value="SEA">SEA</option>
        </select>
    </label>
    <label>Arrival:
        <input type="datetime-local" name="arrival">
    </label>
    <input type="submit" value="Add Details">
    </form>
</body>
</html>